<h3 style="color: rgba(48, 9, 30, 0.89);">{{viewTitle}}</h3>
<form action="/api/cements" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{cement._id}}">
    <div class="form-group">
        <label>Date:</label>
        <input type="date" class="form-control" name="date" placeholder="Date"   value="{{cement.date}}">
        <div class="text-danger">
            {{cement.dateError}}
        </div>
    </div>
    <div class="form-group">
        <label>Quantity:</label>
        <input type="number" class="form-control" name="qty" placeholder="Quantity" id="qty" value="{{cement.qty}}">
        <div class="text-danger">
            {{cement.qtyError}}
        </div>
    </div>
    <div class="form-row">
        <div class="from-group col-md-6">
           <label>Rate:</label>
           <input type="number" class="form-control" name="rate" placeholder="Rate" id="rate" value="{{cement.rate}}">
           <div class="text-danger">
            {{cement.rateError}}
            </div>
        </div>
        <script>
    function compute() {
        let f = parseInt(qty.value);
        let s = parseInt(rate.value);
        //parseInt just for getting only integer value here i target the input boxex by there id's baaki aap samajhdaar hai 

        let t = f * s;
        // let m = f * s;
        total.value = t;
        // multi.value = m;  

        // agr multiply krna ho to ye use kr lena with multiply input box
    }
</script>
        <div class="form-group col-md-6">
            <label>Total Amt:</label>
            <input type="number" class="form-control" name="total" placeholder="Total Amount" id="total"  autocomplete="on">
            <div class="text-danger">
            {{cement.totalError}}
            </div>
        </div>
    </div>  
 
    <div class="form-group">
        <button type="button"  class="btn btn-info" onclick=compute(); >Calc total</button>
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="cements/list" ><i class="fa fa-list-alt"></i> View List</a>
    </div>
    
</form>
